@model IEnumerable<PAUP_zgrade.Models.zgrada>

@{
    ViewBag.Title = "Lista zgrada";
}

<h2>Lista zgrada</h2>

<p>
    @Html.ActionLink("Dodaj zgradu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ulica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.grad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postanskibroj)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
