@model IEnumerable<PAUP_zgrade.Models.poruka>

@{
    ViewBag.Title = "Pristigle poruke";
}
@if (Session["email"] != null && Session["email"].ToString() == "upravitelj_zgradara@gmail.com")
{
<h2>Pristigle poruke</h2>

@*<p>
    @Html.ActionLink("", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.temaPoruke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tijeloPoruke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datumPoruke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.posiljateljPoruke)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.temaPoruke)
        </td>
        <td>
            @{
                string tijelo;
                if (item.tijeloPoruke.ToString().Length > 100)
                {
                    tijelo = item.tijeloPoruke.ToString().Substring(0, 100) + "...";
                }
                else
                {
                    tijelo = item.tijeloPoruke;
                }
            }
            @tijelo
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumPoruke)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.posiljateljPoruke)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.idporuka }) |*@
            @Html.ActionLink("Details", "Details", new { id = item.idporuka }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idporuka })
        </td>
    </tr>
                }

</table>
                        }
                        else {

<div class="jumbotron container">
    <h3>Stranica za upravitelja</h3>
    <p class="lead">Poštovani, ova stranica je samo za upravitelja zgrada.Ukoliko ste vi to upravitelju, molim prijavite se!</p>
</div>}